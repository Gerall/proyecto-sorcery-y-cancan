<tr class="success" id=<%= "estudiante_#{estudiante.id}" %>>

  <td><%= estudiante.id %></td>
  <td><%= image_tag estudiante.imagen.url(:lsmall) %> <%= estudiante.nombres %></td>
  <td><%= estudiante.apellidos %></td>
  <td><%= estudiante.cedula %></td>
  <td><%= estudiante.telefono %></td>
  <td><%= estudiante.email %></td>
  <td><%= estudiante.direccion %></td>
  <td><%= estudiante.fch_ncto %></td>
  <td><%= estudiante.curso.nombre %></td>
  <td>
    <%= link_to 'Mostrar', curso_estudiante_path(@curso,estudiante), :remote =>true, :class => 'btn btn-mini btn-info' %>
    <%= link_to 'Editar', edit_curso_estudiante_path(@curso,estudiante), :remote => true,
        :class => 'btn btn-mini btn-warning' %>
    <%= link_to 'Eliminar', curso_estudiante_path(@curso,estudiante), 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>